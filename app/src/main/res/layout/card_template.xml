<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        android:layout_marginLeft="@dimen/numa_margin"
        android:layout_marginTop="@dimen/numa_margin"
        android:layout_marginRight="@dimen/numa_margin">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/cardArrange">


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:src="@drawable/m01"  android:id="@+id/cardImage"
                android:elevation="4dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:baselineAlignBottom="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:longClickable="true"
                android:clickable="false"
                android:contentDescription="@string/caption" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardImage"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"


                android:padding="16dp"
                android:elevation="4dp"
                android:id="@+id/cardText">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:hint="@string/periodName"
                    android:id="@+id/periodName"

                    android:textColorHint="@color/brightOrange"
                    android:textColor="@color/brightOrange"
                    android:textSize="24sp"
                    android:nestedScrollingEnabled="false"
                    android:elegantTextHeight="false"
                    android:gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:hint="@string/periodTimes1"
                    android:id="@+id/periodTimes"

                    android:textColor="@color/numa_quadrary"
                    android:textSize="24sp"
                    android:nestedScrollingEnabled="false"
                    android:elegantTextHeight="false"
                    android:gravity="left"
                    android:layout_marginLeft="12dp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>